<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
         android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_city"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="11dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_home"
                tools:targetApi="m" />

            <TextView
                android:id="@+id/textView_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView_city"
                android:layout_marginStart="10dp"

                android:layout_toEndOf="@+id/imageView_city"
                android:fontFamily="@font/bold"
                android:textColor="@color/strong"
                android:textSize="@dimen/title2" />

            <TextView
                android:id="@+id/textView_zipCod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_price"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/light"
                android:textSize="@dimen/subtitle"
                android:textColor="@color/light"
                android:layout_toEndOf="@+id/imageView_city"

                />

            <ImageView
                android:id="@+id/image_bed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_zipCod"
                android:layout_alignBottom="@+id/imageView_city"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/imageView_city"
                android:src="@drawable/ic_bed" />


            <TextView
                android:id="@+id/textView_bed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_zipCod"
                android:layout_alignBottom="@+id/imageView_city"
                android:layout_marginStart="3dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/image_bed"
                android:gravity="center"
                android:text="1"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/image_bath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_zipCod"
                android:layout_alignBottom="@+id/imageView_city"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/textView_bed"
                android:src="@drawable/ic_bath" />

            <TextView
                android:id="@+id/textView_bath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_zipCod"
                android:layout_alignBottom="@+id/imageView_city"
                android:layout_marginStart="3dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/image_bath"
                android:gravity="center"
                android:text="2" />

            <ImageView
                android:id="@+id/image_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_zipCod"
                android:layout_alignBottom="@+id/imageView_city"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/textView_bath"
                android:src="@drawable/ic_layers" />

            <TextView
                android:id="@+id/textView_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_zipCod"
                android:layout_alignBottom="@+id/imageView_city"
                android:layout_marginStart="3dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/image_layer"
                android:gravity="center"
                android:text="3" />

            <ImageView
                android:id="@+id/image_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_zipCod"
                android:layout_alignBottom="@+id/imageView_city"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/textView_layer"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/textView_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_zipCod"
                android:layout_alignBottom="@+id/imageView_city"
                android:layout_marginStart="3dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/image_location"
                android:gravity="center"
                android:text="4" />

            <TextView
                android:id="@+id/textView_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_price"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/textView_zipCod"
                android:gravity="center"
                 />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>


</RelativeLayout>